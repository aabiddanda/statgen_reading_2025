
% PSet Header %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\newcommand\@name{}
\newcommand\name[1]{\renewcommand\@name{#1}}

\newcommand\@netID{}
\newcommand\netID[1]{\renewcommand\@netID{#1}}

\renewcommand\@date{}
\renewcommand\date[1]{\renewcommand{\@date}{#1}}

\newcommand\@psnum{}
\newcommand\psnum[1]{\renewcommand\@psnum{#1}}

\newcommand\@class{}
\newcommand\class[1]{\renewcommand\@class{#1}}

\newcommand\@collab{}
\newcommand\collab[1]{\renewcommand\@collab{#1}}

%The generic title creation
\renewcommand\maketitle{
	\vspace*{-5em}
	\begin{center}\framebox{\parbox{\boxlength}{\bf
		\@name \hfill Problem Set \@psnum\\ 
		\@class  \hfill \@date
	}}
	\end{center}
	\vspace{1em}
}

%Alternate problem set title creation, with collaborators
\newcommand\maketitleAlt{
	\vspace*{3em}
	\begin{center}
		{\huge \textbf{\@class \ HW\ \@psnum}}\\
		{\normalsize \@name\footnote{Collaborating with \@collab}\ (\@netID) \ \@date}
	\end{center}
	\vspace*{3em}
}

\newcommand\problem[1]{\section*{#1}}

\newcommand\problempart[1]{\textbf{#1}}

% Hyperlinks %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage[hidelinks]{hyperref}
\newcommand\link[2]{\href{#1} {{\color{blue}\underline{\smash{#2}}}}}

