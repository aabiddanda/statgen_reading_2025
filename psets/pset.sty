% Graph Environment %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{tikz,graphicx}
\RequirePackage{ifthen,optparams}

\tikzstyle{vertex}=[circle, draw, inner sep=0pt, minimum size = 9pt]

\newcommand\vertex{\node[vertex]}

\long\def\uedge@[#1][#2]#3#4{
	\ifthenelse{\equal{#1}{}}{\draw #3 edge #4;}{\draw #3 edge node[#1] {#2} #4;}
}

\newcommand\uedge{
	\optparams{\uedge@}{[][]}	
}

\long\def\dedge@[#1][#2]#3#4{
	\ifthenelse{\equal{#1}{}}{\draw[->] #3 edge #4;}{\draw[->] #3 edge node[#1] {#2} #4;}
} 

\newcommand\dedge{
	\optparams{\dedge@}{[][]}
}


